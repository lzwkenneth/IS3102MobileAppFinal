<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="60dp">

        <!--        <Button
                    android:id="@+id/findSelected1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tickets That You Have Selected" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Categories" />


        <TextView
            android:id="@+id/emptyv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="No ticket categories have been added for this event" />

        <ListView
            android:id="@+id/listViewTicket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dip"
            android:orientation="horizontal">


            <!--            <Button android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/ButtonRemoveFromCart"
                            android:text="Remove from Cart"></Button>-->
            <Button
                android:id="@+id/proceedToCheckOut"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed to Checkout"></Button>
        </LinearLayout>


    </LinearLayout>
</LinearLayout>